@model EditUserViewModel


@{
    
}


  <main>
    <div class="py-5 text-center" bis_skin_checked="1">
      <h2>Change Password</h2>
    </div>

    <div class="row g-5" bis_skin_checked="1">

        @using (Html.BeginForm("OnPost", "User")){
            @Html.HiddenFor(h => @Model.Id);
          <div class="row g-3" bis_skin_checked="1">

            <div class="col-12" bis_skin_checked="1">
              <label asp-for="Email" class="form-label"></label>
              <input asp-for="Email" class="form-control" value="@Model.Email">
              <span asp-validation-for="Email" class="text-danger"></span>
            </div>

 
            <div class="col-12" bis_skin_checked="1">
              <label asp-for="Password" class="form-label">New Password</label>
              <input asp-for="Password" type="text" class="form-control" required="" value="@Model.Password">
              <span asp-validation-for="Password" class="text-danger"></span>
            </div>

          </div> 

          <hr class="my-4">

          <div class="text-danger">
              @Html.ValidationMessage("CustomError")
          </div>
          <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
   }
    </div>
  </main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}